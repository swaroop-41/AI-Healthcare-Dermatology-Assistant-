# Application
APP_NAME="Dermatology AI Assistant"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# API Configuration
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database
DATABASE_URL=postgresql://admin:password@localhost:5432/dermatology_db
DB_USER=admin
DB_PASSWORD=password
DB_NAME=dermatology_db
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
UPLOAD_DIR=./uploads
HEATMAP_DIR=./heatmaps
REPORT_DIR=./reports
MAX_UPLOAD_SIZE=10485760  # 10MB

# ML Models
MODEL_PATH=./models/skin_multiclass.pth
BIOBERT_MODEL_PATH=./models/biobert
RISK_MODEL_PATH=./models/risk_predictor.pkl

# OpenAI (for chatbot)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Email Service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
EMAIL_FROM=noreply@dermatology-ai.com

# Monitoring
ENABLE_METRICS=True
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Medical Compliance
REQUIRE_DOCTOR_REVIEW=True
HIGH_RISK_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.6

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
